@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled='disabled'" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled='disabled'" : "";
}
<nav aria-label="..." class="nav navbar-fixed-bottom">
    <ul class="pager">
        <li>
            <button type="submit" name="page" value="1" @prevDisabled class="btn btn-default">
                <span aria-hidden="true">&lArr;</span>&nbsp;First
            </button>
        </li>
        <li>
            <button type="submit" name="page" @prevDisabled value="@(Model.PageIndex - 1)" class="btn btn-default">
                <span aria-hidden="true">&larr;</span>&nbsp;Previous
            </button>
        </li>
        <li class="badge"><span class="text-primary">Page @Model.PageIndex of @Model.TotalPages</span></li>
        <li>
            <button type="submit" name="page" @nextDisabled value="@(Model.PageIndex + 1)" class="btn btn-default">
                Next&nbsp;<span aria-hidden="true">&rarr;</span>
            </button>
        </li>
        <li>
            <button type="submit" name="page" @nextDisabled value="@(Model.TotalPages)" class="btn btn-default">
                Last&nbsp;<span aria-hidden="true">&rArr;</span>
            </button>
        </li>
    </ul>
</nav>
